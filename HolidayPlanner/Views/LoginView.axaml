<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:views="clr-namespace:HolidayPlanner.Views"
             xmlns:vm="clr-namespace:HolidayPlanner.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HolidayPlanner.Views.LoginView">

	<Grid Background="#fff" RowDefinitions="100,*,100" ColumnDefinitions="150,*,150">
		<views:Circles Grid.ColumnSpan="3" Grid.RowSpan="3"/>
		<Grid Grid.Column="1" Grid.Row="1" Background="#fff" RowDefinitions="60,*,*,45,*,*,45,60" ColumnDefinitions="45,*,45">
			<Label Grid.Column="1" Grid.Row="1" Content="Brugernavn"/>
			<TextBox Grid.Column="1" Grid.Row="2" Watermark="Brugernavn"/>
			<Label Grid.Column="1" Grid.Row="4" Content="Password"/>
			<TextBox Grid.Column="1" Grid.Row="5" Watermark="Password" PasswordChar="*"/>
			<Button Grid.Column="1" Grid.Row="6" Margin="0 5" Background="#00FE02" Foreground="#000" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Log ind"/>
		</Grid>
	</Grid>
</UserControl>
